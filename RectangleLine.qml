import QtQuick 2.0

Rectangle {
    property point origin1: undefined
    property point origin2: undefined

    height: 1
    width: getDistance(origin1, origin2)
    color: "grey"
    x: origin1.x
    y: origin1.y
    rotation: getAngle(origin1, origin2)
    transformOrigin: Qt.TopLeftCorner

    function getDistance(point1, point2) {
        return Math.sqrt(Math.pow(point1.x - point2.x, 2) + Math.pow(point1.y - point2.y, 2))
    }

    function radToDeg(radians) {
        return radians * (180 / Math.PI);
    }

    function getAngle(point1, point2) {
        let deltaX = point2.x - point1.x
        let deltaY = point2.y - point1.y
        let rotation = Math.atan2(deltaY, deltaX);
        return radToDeg(rotation);
    }
}
